{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["NEXT_PUBLIC_POD_ISSUER_SERVER_URL"],
  "globalPassThroughEnv": ["PORT", "NEXT_PUBLIC_POD_ISSUER_SERVER_URL"]
}
